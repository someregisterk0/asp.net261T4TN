@model WebApp.Models.Product;

<form method="post">
    <div class="form-group">
        <label>Name</label>
        <input class="form-control" type="text" required name="name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label>Category</label>
        <select name="CategoryId">
            @foreach (WebApp.Models.Category item in ViewBag.categories)
            {
                if (item.Id == Model.CategoryId)
                {
                    <option selected value="@item.Id">@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label>Brand</label>
        <select name="BrandId">
            @foreach (WebApp.Models.Brand item in ViewBag.brands)
            {
                if (item.Id == Model.BrandId)
                {
                    <option selected value="@item.Id">@item.Name</option>
                }
                else
                {
                    <option value="@item.Id">@item.Name</option>
                }
            }
        </select>
    </div>
    <div class="form-group">
        <label>Price</label>
        <input class="form-control" type="number" name="Price" required step="0.01" value="@Model.Price" />
    </div>
    <div class="form-group">
        <label>Model Year</label>
        <input class="form-control" type="number" name="ModelYear" required min="1900" max="2050" value="@Model.ModelYear" />
    </div>

    <div>
        <button class="btn btn-primary">Save Change</button>
    </div>
</form>


